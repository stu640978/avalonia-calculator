<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaCalculatorApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
        x:Class="AvaloniaCalculatorApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaCalculatorApp"
        Width="400"
        Height="600"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen"
        KeyDown="OnKeyDown">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                             TintColor="Black"
                                             TintOpacity="1"
                                             MaterialOpacity="0.2" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Grid Margin="10 40 10 10">
            <!-- 定義兩行：顯示區域和按鍵區域 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- 顯示區域 -->
                <RowDefinition Height="*" />    <!-- 按鍵區域，佔據剩餘空間 -->
            </Grid.RowDefinitions>

            <!-- 顯示區域 -->
            <Border Grid.Row="0" Background="DarkGray" CornerRadius="10" Padding="5">
                <StackPanel Spacing="5" Height="150">
                    <TextBlock Text="{Binding Display}"
                               HorizontalAlignment="Right"
                               FontSize="52"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock Text="{Binding Result}"
                               HorizontalAlignment="Right"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               IsEnabled="{Binding CanShowResult}" />
                </StackPanel>
            </Border>

            <!-- 按鍵區域 -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <Grid Grid.Row="1"
                      ColumnDefinitions="*, *, *, *"
                      RowDefinitions="Auto, Auto, Auto, Auto"
                      HorizontalAlignment="Stretch"
                      Margin="0,20,0,0">
                    <Button Grid.Row="0"
                            Grid.Column="0"
                            Content="AC"
                            Command="{Binding ClearButtonClickCommand}"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Content="%"
                            Command="{Binding OperationButtonClickCommand}"
                            CommandParameter="%"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Content="/"
                            Command="{Binding OperationButtonClickCommand}"
                            CommandParameter="/"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="0"
                            Grid.Column="3"
                            Content="*"
                            Command="{Binding OperationButtonClickCommand}"
                            CommandParameter="*"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />

                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Content="7"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="7"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Content="8"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="8"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="1"
                            Grid.Column="2"
                            Content="9"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="9"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="1"
                            Grid.Column="3"
                            Content="-"
                            Command="{Binding OperationButtonClickCommand}"
                            CommandParameter="-"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />

                    <Button Grid.Row="2" Grid.Column="0" Content="4"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="4"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="2"
                            Grid.Column="1"
                            Content="5"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="5"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="2"
                            Grid.Column="2"
                            Content="6"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="6"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="2"
                            Grid.Column="3"
                            Content="+"
                            Command="{Binding OperationButtonClickCommand}"
                            CommandParameter="+"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />

                    <Button Grid.Row="3"
                            Grid.Column="0"
                            Content="1"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="1"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="3"
                            Grid.Column="1"
                            Content="2"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="2"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="3"
                            Grid.Column="2"
                            Content="3"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="3"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="3"
                            Grid.Column="3"
                            Content="Del"
                            Command="{Binding DeleteButtonClickCommand}"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                </Grid>
                <Grid Grid.Row="2"
                      ColumnDefinitions="2*, *, *"
                      RowDefinitions="Auto"
                      HorizontalAlignment="Stretch">
                    <Button Grid.Row="0"
                            Grid.Column="0"
                            Content="0"
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="0"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Content="."
                            Command="{Binding NumberButtonClickCommand}"
                            CommandParameter="."
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Content="="
                            Command="{Binding EqualButtonClickCommand}"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Margin="2"
                            Height="50"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="24" />
                </Grid>
            </StackPanel>
        </Grid>
    </Panel>

</Window>